<div class="container">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
		<h1 class="text-center">New Script</h1>

		<%= form_for @script do |f| %>
		<div class="form-group">
			<%= f.label :title %><br />
			<%= f.text_field :title, {class: "form-control"}%>
		</div>
		<div class="form-group">
			<%= f.label :genre %> 
			<%= f.select :genre, [['Song', 'Song'], ['Poetry', 'Poetry'], ['Story', 'Story'], ['Novel', 'Novel'], ['Alternative', 'Alternative']], {label: "Script Genre"}, {class: "form-control"} %>
		</div>
		<div class="form-group">
			<%= f.label :preface %>
			<%= f.text_area :preface, {class: "form-control", style: "resize:vertical;"} %>
		</div>
		<div class="form-group">
			<%= f.submit "Write", {class: "btn btn-warning"}%>
		</div>
		<% end %>

		<%= link_to 'Back', scripts_path %>
	</div>
  </div>
</div>
